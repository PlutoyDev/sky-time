{
  "name": "sky-time",
  "version": "0.1.0",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "scripts": {
    "wlj": "yarn workspaces list --json",
    "wname": "yarn workspaces list --json | ndjson-map 'd.name' ",
    "wr": "yarn workspace $(yarn wname | ipt | tr -d '\"')",
    "wntl": "yarn workspace $(yarn wname | ipt | tr -d '\"') ntl",
    "client": "yarn workspace @sky-time/client",
    "server": "yarn workspace @sky-time/server",
    "shared": "yarn workspace @sky-time/shared"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@yarnpkg/pnpify": "^4.0.0-rc.2",
    "concurrently": "^7.1.0",
    "ipt": "^3.2.0",
    "jest": "^27.5.1",
    "ndjson-cli": "^0.3.1",
    "npm-run-all": "^4.1.5",
    "ntl": "^5.1.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "ntl": {
    "runner": "yarn"
  }
}
